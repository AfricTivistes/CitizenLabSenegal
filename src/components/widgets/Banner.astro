---
const title = Astro.props.title;
const subtitle = Astro.props.subtitle;
---

<header class="relative md:h-[450px] h-[350px] w-full overflow-hidden">
  <slot />
  <div
    class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/50 to-black/70 z-10"
  >
  </div>
  <div
    class="relative z-50 h-full flex flex-col items-center justify-center space-y-4"
  >
    <h1
      class="text-4xl md:text-5xl font-bold text-white text-center px-4 uppercase tracking-tight animate-fade-in"
    >
      {title}
    </h1>
    <p
      class="text-white/90 text-lg md:text-xl text-center px-4 max-w-2xl animate-fade-in-delay"
    >
      {subtitle}
    </p>
  </div>
</header>
