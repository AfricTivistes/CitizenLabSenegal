---
const title = Astro.props.title;
const subtitle = Astro.props.subtitle;
---

<header class="relative md:h-[900px] h-[800px] lg:h-[1000px] w-full overflow-hidden">
  <slot />
  <div
    class="relative h-full flex flex-col items-center justify-center space-y-4"
  >
    <h1 class="text-3xl md:text-7xl font-bold text-white mb-6 leading-tight text-center">
        {title}
      </h1>
      
      <p class="text-xl md:text-2xl text-green-100 mb-8 leading-relaxed text-center">
        {subtitle}
      </p>
  </div>
</header>
