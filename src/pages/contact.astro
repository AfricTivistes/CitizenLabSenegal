---
import Banner from "~/components/widgets/Banner.astro";
import Layout from "~/layouts/PageLayout.astro";
import InfoSection from "~/components/widgets/contact/InfoSection.astro";
import FormSection from "~/components/widgets/contact/FormSection.astro";
import MainSection from "~/components/widgets/contact/MainSection.astro";

const metadata = {
  title: "Nous Contacter",
};
---

<Layout metadata={metadata}>
  <!-- Banner Widget -->
  <Banner
    title={metadata.title}
    subtitle="Nous sommes là pour vous aider. N'hésitez pas à nous envoyer un message !"
  >
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3858.674431357392!2d-17.465673826142613!3d14.730989685770965!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xec10da6f3b7ebe7%3A0x817f4339dfb6752!2sAfricTivistes!5e0!3m2!1sfr!2ssn!4v1759775910205!5m2!1sfr!2ssn"
      class="absolute inset-0 w-full h-full border-0 z-0 scale-110 transition-transform duration-700"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    >
    </iframe>
  </Banner>

  <!-- Section principale -->
  <MainSection>
    <!-- Formulaire section -->
    <FormSection />

    <!-- Section d'information -->
    <InfoSection />
  </MainSection>
</Layout>
