<script>
  let currentSlide = 0;
  const totalSlides = 3;
  const track = document.getElementById("carousel-track");

  function updateCarousel() {
    if (track) {
      track.style.transform = `translateX(-${currentSlide * 100}%)`;
    }
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % totalSlides;
    updateCarousel();
  }

  // Auto-play toutes les 5 secondes
  setInterval(nextSlide, 5000);
</script>
<script define:vars={{ testimonials }}>
  let currentIndex = 0;

  const updateTestimonial = () => {
    const current = testimonials[currentIndex];
    document
      .getElementById("testimonial-quote")
      .querySelector("blockquote").textContent = `"${current.quote}"`;
    document.getElementById("testimonial-avatar").src = current.avatar;
    document.getElementById("testimonial-avatar").alt = current.author;
    document.getElementById("testimonial-author").textContent = current.author;
    document.getElementById("testimonial-role").textContent = current.role;

    // Update dots
    document.querySelectorAll(".dot").forEach((dot, index) => {
      if (index === currentIndex) {
        dot.classList.remove("bg-gray-300", "hover:bg-gray-400");
        dot.classList.add("bg-primary", "w-8");
      } else {
        dot.classList.remove("bg-primary", "w-8");
        dot.classList.add("bg-gray-300", "hover:bg-gray-400");
      }
    });
  };

  document.getElementById("next-btn").addEventListener("click", () => {
    currentIndex = (currentIndex + 1) % testimonials.length;
    updateTestimonial();
  });

  document.getElementById("prev-btn").addEventListener("click", () => {
    currentIndex =
      (currentIndex - 1 + testimonials.length) % testimonials.length;
    updateTestimonial();
  });

  document.querySelectorAll(".dot").forEach((dot) => {
    dot.addEventListener("click", () => {
      currentIndex = parseInt(dot.dataset.index);
      updateTestimonial();
    });
  });
</script>
