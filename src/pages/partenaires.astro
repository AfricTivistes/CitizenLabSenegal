---
import Layout from '~/layouts/PageLayout.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Brands from '~/components/widgets/Brands.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import backgroundImage from '~/assets/images/partenaire.jpg';
import backgroundImage from '~assets/images/partenaire.jpg'

const metadata = {
  title: 'Nos Partenaires - AfricTivistes CitizenLab Sénégal',
  description: 'Découvrez les organisations et institutions qui soutiennent notre mission pour promouvoir la démocratie participative et la citoyenneté active au Sénégal.',
};

const partners = [
  {
    name: 'AfricTivistes',
    href: 'https://www.africtivistes.com/fr/',
    logo: 'https://update.africtivistes.org/wp-content/uploads/2023/10/Logo-Africtivistes.png',
    description: 'AfricTivistes est une organisation panafricaine qui œuvre pour la promotion de la démocratie, des droits humains et de la bonne gouvernance en Afrique à travers l\'utilisation des technologies civiques et l\'innovation citoyenne.',
    details: 'Fondée en 2015, AfricTivistes s\'engage à renforcer la participation citoyenne et à promouvoir la transparence dans les processus démocratiques. Nous collaborons sur des projets de formation, de plaidoyer et d\'innovation technologique pour un impact durable.',
    social: {
      facebook: 'https://www.facebook.com/AfricTivistes',
      instagram: 'https://www.instagram.com/africtivistes',
      twitter: 'https://twitter.com/AfricTivistes',
      tiktok: 'https://www.tiktok.com/@africtivistes'
    }
  },
  {
    name: 'Union Européenne - Partenariats Internationaux',
    href: 'https://international-partnerships.ec.europa.eu/index_fr',
    logo: 'https://citizenlab.africtivistes.org/cameroun/wp-content/uploads/sites/2/2025/04/logoue.png',
    description: 'L\'Union Européenne apporte son soutien financier et technique aux initiatives de développement durable et de gouvernance démocratique à travers ses partenariats internationaux, contribuant ainsi à renforcer les capacités locales.',
    details: 'L\'Union Européenne finance des programmes de développement en Afrique, en se concentrant sur la gouvernance, les droits humains et le développement durable. Notre partenariat vise à amplifier l\'impact des initiatives locales pour une transformation inclusive.',
    social: {
      facebook: 'https://www.facebook.com/EuropeanCommission',
      instagram: 'https://www.instagram.com/europeancommission',
      twitter: 'https://twitter.com/EU_Commission'
    }
  },
  {
    name: 'Youth Democracy Cohort',
    href: 'https://youthdemocracycohort.com/',
    logo: 'https://citizenlab.africtivistes.org/cameroun/wp-content/uploads/sites/2/2025/04/logoydc.png',
    description: 'La Youth Democracy Cohort rassemble des jeunes leaders africains engagés dans la promotion de la démocratie participative et l\'innovation civique à travers le continent, créant un réseau dynamique de changement.',
    details: 'Ce programme forme et connecte les jeunes leaders pour qu\'ils deviennent des acteurs clés dans la promotion de la démocratie. Ensemble, nous développons des compétences en leadership, en plaidoyer et en innovation pour un avenir plus juste.',
    social: {
      facebook: 'https://www.facebook.com/YouthDemocracyCohort',
      instagram: 'https://www.instagram.com/youthdemocracycohort',
      twitter: 'https://twitter.com/YDCohort',
      tiktok: 'https://www.tiktok.com/@youthdemocracycohort'
    }
  }
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <div class="relative min-h-screen flex items-center justify-center bg-cover bg-center bg-no-repeat" style="background-image: url('https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');">
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black bg-opacity-50"></div>

    <!-- Content -->
    <div class="relative z-10 text-center text-white max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
        Nos Partenaires
      </h1>
      <p class="text-xl md:text-2xl mb-8 leading-relaxed max-w-3xl mx-auto">
        Ensemble, nous construisons un Sénégal plus démocratique et participatif à travers des collaborations stratégiques et des initiatives citoyennes innovantes.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-block bg-primary hover:bg-primary-dark text-white font-semibold px-8 py-3 rounded-lg transition-colors duration-300">
          Devenir Partenaire
        </a>
        <a href="/about" class="inline-block border-2 border-white text-white hover:bg-white hover:text-gray-900 font-semibold px-8 py-3 rounded-lg transition-colors duration-300">
          En Savoir Plus
        </a>
      </div>
    </div>
  </div>

  <!-- Mission Section -->
  <Features3
    title="Notre Écosystème Partenaire"
    subtitle="Un réseau d'organisations engagées pour l'innovation démocratique et la participation citoyenne"
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Organisations Internationales',
        description: 'Institutions et organisations internationales qui apportent leur expertise et leur soutien à notre mission de transformation démocratique.',
        icon: 'tabler:building-bank',
      },
      {
        title: 'ONG et Société Civile',
        description: 'Organisations non gouvernementales et acteurs de la société civile qui œuvrent pour la promotion des droits humains et de la bonne gouvernance.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Institutions Académiques',
        description: 'Universités et centres de recherche qui contribuent à la production de connaissances et à la formation des futurs leaders citoyens.',
        icon: 'tabler:school',
      },
    ]}
  />

  <!-- Partners Grid Section -->
  <div class="py-16 bg-gradient-to-b from-gray-50 to-white dark:from-slate-900 dark:to-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 text-center">
          Nos Partenaires
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Découvrez les organisations exceptionnelles qui partagent notre vision d'une démocratie plus inclusive et participative
        </p>
      </div>

      <!-- Partners Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {partners.map((partner, index) => (
          <div class="bg-white dark:bg-slate-800 p-6 rounded-lg shadow-lg text-center hover:shadow-xl transition-shadow duration-300" style="border: 1px solid #000;">
            <a href={partner.href} target="_blank" class="block mb-4 transition-transform hover:scale-105">
              <img src={partner.logo} alt={partner.name} class="max-h-16 mx-auto object-contain" />
            </a>
            <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed mb-4">
              {partner.description}
            </p>

            <!-- Social Media Icons -->
            <div class="flex justify-center space-x-4 mb-4">
              {partner.social?.facebook && (
                <a href={partner.social.facebook} target="_blank" class="text-blue-600 hover:text-blue-800 transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
              )}
              {partner.social?.instagram && (
                <a href={partner.social.instagram} target="_blank" class="text-pink-600 hover:text-pink-800 transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              )}
              {partner.social?.twitter && (
                <a href={partner.social.twitter} target="_blank" class="text-blue-400 hover:text-blue-600 transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                </a>
              )}
              {partner.social?.tiktok && (
                <a href={partner.social.tiktok} target="_blank" class="text-black hover:text-gray-800 transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-.88-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                  </svg>
                </a>
              )}
            </div>

            <!-- En savoir plus button -->
            <button class="en-savoir-plus-btn bg-primary hover:bg-primary-dark text-white font-semibold px-4 py-2 rounded-lg transition-colors duration-300" data-partner={index}>
              En savoir plus
            </button>

            <!-- Collapse content -->
            <div class="collapse-content hidden mt-4 p-4 bg-gray-50 dark:bg-slate-700 rounded-lg">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{partner.name}</h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed mb-3">
                {partner.details}
              </p>
              <a href={partner.href} target="_blank" class="text-primary hover:text-primary-dark font-semibold">
                Visiter le site web →
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Partnership Benefits -->
  <Features3
    title="Pourquoi Partenier avec CitizenLab Sénégal ?"
    subtitle="Rejoignez un écosystème d'organisations engagées pour un impact collectif plus fort"
    columns={2}
    isAfterContent={true}
    items={[
      {
        title: 'Impact Amplifié',
        description: 'Multipliez votre impact en collaborant avec un réseau d\'acteurs engagés pour la transformation démocratique du Sénégal.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Expertise Partagée',
        description: 'Bénéficiez de l\'expertise collective de nos partenaires et contribuez à enrichir les connaissances du réseau.',
        icon: 'tabler:brain',
      },
      {
        title: 'Innovation Continue',
        description: 'Participez à la co-création de solutions innovantes pour répondre aux défis démocratiques contemporains.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Visibilité Renforcée',
        description: 'Augmentez votre visibilité et votre influence en étant associé à une initiative citoyenne reconnue et impactante.',
        icon: 'tabler:speakerphone',
      },
    ]}
  />

  <!-- Stats Section -->
  <Stats
    title="CitizenLab Sénégal en chiffres"
    stats={[
      { title: 'Partenaires actifs', amount: '3' },
      { title: 'Projets collaboratifs', amount: '12' },
      { title: 'Jeunes bénéficiaires', amount: '+150' },
      { title: 'Territoire couvert', amount: '14 régions' },
    ]}
    classes={{
      container: 'max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16',
      title: 'text-3xl md:text-4xl font-bold text-center mb-12 text-gray-900 dark:text-white',
      items: {
        container: 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8',
        panel: 'text-center p-6 bg-white dark:bg-slate-700 rounded-lg shadow-lg',
        amount: 'text-4xl md:text-5xl font-bold text-primary dark:text-white mb-2',
        title: 'text-lg text-gray-600 dark:text-gray-300'
      }
    }}
  />

  <!-- Call to Action -->
  <CallToAction
    title="Prêt à nous rejoindre ?"
    subtitle="Que vous soyez une organisation, une institution ou un particulier, votre contribution compte dans notre mission commune."
    actions={[
      {
        text: 'Nous Contacter',
        href: '/contact',
        variant: 'primary',
      },
      {
        text: 'En Savoir Plus',
        href: '/about',
        variant: 'secondary',
      },
    ]}
  />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.en-savoir-plus-btn');
    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const partnerIndex = button.getAttribute('data-partner');
        const collapseContent = button.nextElementSibling;
        if (collapseContent.classList.contains('hidden')) {
          collapseContent.classList.remove('hidden');
          button.textContent = 'Masquer';
        } else {
          collapseContent.classList.add('hidden');
          button.textContent = 'En savoir plus';
        }
      });
    });
  });
</script>
